{
   "manifest_version": 2,
   
   "name": "Chrome Simple HTTP Tracer",
   "description": "Monitor all HTTP/HTTPs traffic from your browser.",
   "version": "1.1.0",
   "author": "Edouard Paumier",
   
   "background": {
      "scripts": ["background.js", "FileSaver.min.js"]
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Chrome Simple HTTP Tracer"
   },
   "offline_enabled": true,
   "permissions": [ "webRequest", "webRequestBlocking", "tabs", "http://*/", "https://*/", "<all_urls>", "debugger" ]
}
